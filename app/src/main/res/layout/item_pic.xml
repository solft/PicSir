<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_pic_item">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_pic_margin"
        app:cardCornerRadius="@dimen/item_pic_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pic_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:contentDescription="@string/img_photo">
            </ImageView>

            <TextView
                android:id="@+id/tv_pic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="@string/sample_string"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/item_pic_margin"
                android:layout_marginStart="@dimen/item_pic_margin_start"
                android:layout_marginEnd="@dimen/item_pic_margin"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>