<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:padding="@dimen/item_pic_padding"
        android:layout_margin="@dimen/item_pic_margin"/>

    <TextView
        android:id="@+id/tv_pic_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="sample text"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/item_pic_margin"
        android:layout_marginStart="@dimen/item_pic_margin"
        android:layout_marginEnd="@dimen/item_pic_margin"/>

</LinearLayout>